pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'homework31', url: 'https://github.com/Hronologiya/AQA.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r lesson_31/requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest lesson_31/tests'
            }
        }

        stage('Publish Results') {
            steps {
                junit 'lesson_31/test-results/*.xml'
            }
        }
    }

    post {
        always {
            mail to: 'InsertYour@Mail.Here',
                 subject: "Build ${currentBuild.fullDisplayName}",
                 body: "Check console output at ${env.BUILD_URL} to view the results."
        }
    }
}