pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'homework31/lesson_31', url: 'https://github.com/Hronologiya/AQA.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt' // Замість requirements.txt використовуйте ваш файл з залежностями
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest' // Або команда для запуску ваших тестів
            }
        }

        stage('Publish Results') {
            steps {
                junit '**/test-results/*.xml' // Замість цього використовуйте шлях до ваших результатів тестування
            }
        }
    }

    post {
        always {
            mail to: 'InsertYour@Mail.Here',
                 subject: "Build ${currentBuild.fullDisplayName}",
                 body: "Check console output at ${env.BUILD_URL} to view the results."
        }
    }
}