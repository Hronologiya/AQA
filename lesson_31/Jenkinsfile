pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Hronologiya/AQA.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'pip install -r requirements.txt'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh 'pytest'
                }
            }
        }

        stage('Publish Results') {
            steps {
                junit 'tests/results/*.xml'
            }
        }
    }

    post {
        always {
            mail to: 'InsertYour@Mail.Here',
                 subject: "Test Results: ${currentBuild.currentResult}",
                 body: "The tests have been completed. Check the Jenkins console output for more details."
        }
    }
}
